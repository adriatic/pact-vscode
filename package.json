{
  "name": "pact-vscode",
  "displayName": "PACT",
  "description": "Protocol-Aware Cognitive Tool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pactContainer",
          "title": "PACT",
          "icon": "resources/pact.svg"
        }
      ]
    },
    "views": {
      "pactContainer": [
        {
          "id": "pact-vscode.pactView",
          "name": "PACT",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "pact.setApiKey",
        "title": "PACT: Set API Key"
      },
      {
        "command": "pact.sendPrompt",
        "title": "PACT: Send Prompt"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "openai": "^4.0.0"
  }
}
