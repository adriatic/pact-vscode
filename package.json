{
  "name": "pact3-host",
  "displayName": "PACT3 Host",
  "description": "Structured LLM workflow inside VSCode",
  "version": "0.0.1",
  "publisher": "nik",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pact3.setApiKey",
        "title": "PACT3: Set API Key"
      },
      {
        "command": "pact3.newChat",
        "title": "PACT3: New Chat"
      },
      {
        "command": "pact3.sendPrompt",
        "title": "PACT3: Send Prompt"
      }
    ],
    "configuration": {
      "title": "PACT",
      "properties": {
        "pact.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for PACT"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.109.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "openai": "^6.22.0",
    "uuid": "^13.0.0"
  }
}
